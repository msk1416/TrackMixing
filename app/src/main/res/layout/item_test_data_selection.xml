<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraintLayoutContainer"
    android:layout_width="match_parent"
    android:layout_height="@dimen/item_test_data_selection_container_height"
    android:layout_marginBottom="4dp">

    <com.google.android.material.checkbox.MaterialCheckBox
        android:id="@+id/cb_item_test_data_selection_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_test_data_selection_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/item_test_data_selection_details_margin_start"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="1"
        android:singleLine="true"
        android:text="Smells like teen spirit"
        android:textColor="@color/item_test_data_selection_title_text_color"
        android:textSize="@dimen/item_test_data_selection_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/cb_item_test_data_selection_selected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_test_data_selection_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nirvana"
        android:textSize="@dimen/item_test_data_selection_sub_title_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@id/tv_item_test_data_selection_title"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.7" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_test_data_selection_separator_author_and_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_test_data_selection_sub_title_margin_horizontal"
        android:text="@string/item_test_data_selection_separator_character"
        android:textSize="@dimen/item_test_data_selection_sub_title_text_size"
        android:textStyle="bold"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_item_test_data_selection_author"
        app:layout_constraintEnd_toStartOf="@id/tv_item_test_data_selection_size"
        app:layout_constraintStart_toEndOf="@id/tv_item_test_data_selection_author" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_item_test_data_selection_size"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/item_test_data_selection_sub_title_margin_horizontal"
        android:text="31.2MB"
        android:textSize="@dimen/item_test_data_selection_sub_title_text_size"
        app:layout_constraintBaseline_toBaselineOf="@id/tv_item_test_data_selection_author"
        app:layout_constraintStart_toEndOf="@id/tv_item_test_data_selection_separator_author_and_size"
        app:layout_constraintTop_toBottomOf="@id/tv_item_test_data_selection_title" />
</androidx.constraintlayout.widget.ConstraintLayout>
