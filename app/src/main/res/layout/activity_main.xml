<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtVocals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vocals"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.11"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.154" />

    <Button
        android:id="@+id/btnVolDownVocals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Vol-"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="226dp"
        app:layout_constraintTop_toBottomOf="@+id/txtVocals" />

    <Button
        android:id="@+id/btnPlayPauseVocals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        app:layout_constraintEnd_toStartOf="@+id/btnVolUpVocals"
        app:layout_constraintStart_toEndOf="@+id/btnVolDownVocals"
        app:layout_constraintTop_toBottomOf="@+id/txtVocals" />

    <Button
        android:id="@+id/btnVolUpVocals"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Vol+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtVocals" />

    <TextView
        android:id="@+id/txtOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.106"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolDownVocals"
        app:layout_constraintVertical_bias="0.053" />

    <Button
        android:id="@+id/btnVolDownOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Vol-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOther" />

    <Button
        android:id="@+id/btnPlayPauseOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        app:layout_constraintEnd_toStartOf="@+id/btnVolUpOther"
        app:layout_constraintStart_toEndOf="@+id/btnVolDownOther"
        app:layout_constraintTop_toBottomOf="@+id/txtOther" />

    <Button
        android:id="@+id/btnVolUpOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Vol+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtOther" />

    <TextView
        android:id="@+id/txtBass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bass"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolDownOther"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/btnVolDownBass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Vol-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBass" />

    <Button
        android:id="@+id/btnPlayPauseBass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        app:layout_constraintEnd_toStartOf="@+id/btnVolUpOther"
        app:layout_constraintStart_toEndOf="@+id/btnVolDownOther"
        app:layout_constraintTop_toBottomOf="@+id/txtBass" />

    <Button
        android:id="@+id/btnVolUpBass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Vol+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtBass" />


    <TextView
        android:id="@+id/txtDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Drums"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.105"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnVolDownBass"
        app:layout_constraintVertical_bias="0.064" />

    <Button
        android:id="@+id/btnVolDownDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:text="Vol-"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDrums" />

    <Button
        android:id="@+id/btnPlayPauseDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Play/Pause"
        app:layout_constraintEnd_toStartOf="@+id/btnVolUpDrums"
        app:layout_constraintStart_toEndOf="@+id/btnVolDownDrums"
        app:layout_constraintTop_toBottomOf="@+id/txtDrums" />

    <Button
        android:id="@+id/btnVolUpDrums"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="40dp"
        android:text="Vol+"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txtDrums" />

    <Button
        android:id="@+id/btnPlayPauseMaster"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Play/Pause MASTER"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnPlayPauseDrums" />
</androidx.constraintlayout.widget.ConstraintLayout>