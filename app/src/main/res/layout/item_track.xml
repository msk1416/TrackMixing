<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardViewContainer"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayoutContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_item_track_thumbnail"
            android:layout_width="match_parent"
            android:layout_height="@dimen/item_track_thumbnail_height"
            android:scaleType="centerCrop"
            android:src="@drawable/test_thumbnail_1280x720"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_item_track_gradient"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/bg_gradient_black"
            app:layout_constraintBottom_toBottomOf="@+id/iv_item_track_thumbnail" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_track_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/item_track_title_margin_start"
            android:layout_marginBottom="@dimen/item_track_title_margin_bottom"
            android:ellipsize="end"
            android:paddingStart="@dimen/item_track_title_padding_start"
            android:paddingEnd="@dimen/item_track_title_padding_end"
            android:text="Desakato - Nueva ReligiÃ³n (Bonus Track 100% Real) - 2019 Remastered edition"
            android:textColor="@color/item_track_title_text_color"
            android:textSize="@dimen/item_track_title_text_size"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/tv_item_track_author" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_track_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Desakato Oficial"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_track_title"
            app:layout_constraintBottom_toTopOf="@id/tv_item_track_duration" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_track_duration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3:40"
            android:layout_marginStart="8dp"
            android:textSize="14dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_item_track_author"
            app:layout_constraintBottom_toBottomOf="parent" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tv_item_track_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:text="Downloaded"
            android:textSize="@dimen/item_track_author_text_size"
            android:textStyle="bold"
            app:layout_constraintBaseline_toBaselineOf="@id/tv_item_track_duration"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>
