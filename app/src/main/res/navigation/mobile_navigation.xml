<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/destination_tracks_list">

    <fragment
        android:id="@+id/destination_tracks_list"
        android:name="com.smascaro.trackmixing.ui.trackslist.TracksListFragment"
        android:label="fragment_tracks_list"
        tools:layout="@layout/fragment_tracks_list">
        <action
            android:id="@+id/action_destination_tracks_list_to_destination_player"
            app:destination="@id/destination_player" />
    </fragment>
    <fragment
        android:id="@+id/destination_search"
        android:name="com.smascaro.trackmixing.ui.search.SongSearchFragment"
        android:label="fragment_song_search"
        tools:layout="@layout/fragment_song_search">
        <action
            android:id="@+id/action_destination_search_to_destination_player"
            app:destination="@id/destination_player" />
    </fragment>
    <activity
        android:id="@+id/destination_player"
        android:name="com.smascaro.trackmixing.TracksPlayerActivity"
        android:label="TracksPlayerActivity"
        tools:layout="@layout/activity_main">
        <argument
            android:name="basePath"
            app:argType="string"
            android:defaultValue="invalid_path"
            app:nullable="false" />

    </activity>

</navigation>
